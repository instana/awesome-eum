@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<div class="site-statistic-demo-card">
    <Row Gutter="16">
        <Col Span="12">
        <Card>
            <Statistic Title="Active" Value="@currentCountUp" Precision="2" ValueStyle="color: #3f8600;" Suffix="%">
                <PrefixTemplate>
                    <span><Icon Type="arrow-up" /></span>
                </PrefixTemplate>
            </Statistic>
        </Card>
        </Col>
        <Col Span="12">
        <Card>
            <Statistic Title="Idle" Value="@currentCountDown" Precision="2" ValueStyle="color: #cf1322;" Suffix="%">
                <PrefixTemplate>
                    <span><Icon Type="arrow-down" /></span>
                </PrefixTemplate>
            </Statistic>
        </Card>
        </Col>
    </Row>
</div>

<style>
    .site-statistic-demo-card {
        background: #ececec;
        padding: 30px;
    }
</style>

<Button Type="primary" @onclick="changeCount">Click me</Button>

@code {
    private int currentCountUp = 0;
    private int currentCountDown = 100;

    private void changeCount()
    {
        currentCountUp++;
        currentCountDown--;
    }
}
